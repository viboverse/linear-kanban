generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}


enum Status {
  TODO
  IN_PROGRESS
  DONE
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

model Task {
  id            String    @id @default(cuid())
  userId        String
  title         String 
  description   String
  dueDate       DateTime
  status        Status    @default(TODO)
  priority      Priority  @default(LOW)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}
